@{
    ViewBag.Title = "Dashboard";
}

<div class="d-flex flex-column gap-3">
    <!-- Header card -->
    <div class="bg-white border rounded p-4">
        <h1 class="h3 fw-bold mb-2">Dashboard</h1>
        <p class="mb-0 text-muted">Welcome to the dashboard</p>
    </div>

    <!-- Stats cards -->
    <div class="row g-3">
        <!-- Users Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-grow-1 d-flex flex-column gap-1">
                        <div class="h4 fw-bold mb-0">1,234</div>
                        <div class="fw-semibold">Users</div>
                        <div class="text-muted small">Active users in the last 24 hours</div>
                    </div>
                    <div>
                        <i class="bi bi-people fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sales Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-grow-1 d-flex flex-column gap-1">
                        <div class="h4 fw-bold mb-0">$12,345</div>
                        <div class="fw-semibold">Sales</div>
                        <div class="text-muted small">Total sales in the last 24 hours</div>
                    </div>
                    <div>
                        <i class="bi bi-cart fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- Visits Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-grow-1 d-flex flex-column gap-1">
                        <div class="h4 fw-bold mb-0">23,456</div>
                        <div class="fw-semibold">Visits</div>
                        <div class="text-muted small">Website visits in the last 24 hours</div>
                    </div>
                    <div>
                        <i class="bi bi-graph-up fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- Orders Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-grow-1 d-flex flex-column gap-1">
                        <div class="h4 fw-bold mb-0">567</div>
                        <div class="fw-semibold">Orders</div>
                        <div class="text-muted small">New orders in the last 24 hours</div>
                    </div>
                    <div>
                        <i class="bi bi-box fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="bg-white border rounded p-4">
        <h2 class="h4 fw-bold mb-4">Featured Products</h2>

        <div class="row g-3">
            <!-- Product Card 1: Wireless Headphones -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400&q=80" class="card-img-top" alt="Wireless Headphones" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">In Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">Wireless Headphones</h5>
                            <span class="badge bg-light text-dark small">Electronics</span>
                        </div>
                        <p class="card-text text-muted small mb-2">Premium noise-cancelling headphones with superior sound quality</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$299.99</span>
                            <button class="btn btn-dark btn-sm">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Card 2: Smart Watch -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=400&q=80" class="card-img-top" alt="Smart Watch" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">Low Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">Smart Watch</h5>
                            <span class="badge bg-light text-dark small">Electronics</span>
                        </div>
                        <p class="card-text text-muted small mb-2">Feature-rich smartwatch with health tracking and notifications</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4.8)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$399.99</span>
                            <button class="btn btn-dark btn-sm">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Card 3: Laptop Stand -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="" class="card-img-top" alt="Laptop Stand" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">In Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">Laptop Stand</h5>
                            <span class="badge bg-light text-dark small">Accessories</span>
                        </div>
                        <p class="card-text text-muted small mb-2">Ergonomic aluminum laptop stand for better posture</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4.2)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$49.99</span>
                            <button class="btn btn-dark btn-sm">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Card 4: Mechanical Keyboard -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="~/images/products/keyboard.jpg" class="card-img-top" alt="Mechanical Keyboard" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">In Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">Mechanical Keyboard</h5>
                            <span class="badge bg-light text-dark small">Electronics</span>
                        </div>
                        <p class="card-text text-muted small mb-2">RGB mechanical keyboard with customizable switches</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4.6)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$149.99</span>
                            <button class="btn btn-dark btn-sm">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Card 5: USB-C Hub -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="~/images/products/usb-hub.jpg" class="card-img-top" alt="USB-C Hub" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">USB-C Hub</h5>
                            <span class="badge bg-light text-dark small">Accessories</span>
                        </div>
                        <p class="card-text text-muted small mb-2">Multi-port USB-C hub with HDMI and SD card reader</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4.3)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$79.99</span>
                            <button class="btn btn-secondary btn-sm" disabled>
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Card 6: Wireless Mouse -->
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1527864550417-7fd91fc51a46?w=400&q=80" class="card-img-top" alt="Wireless Mouse" style="height: 200px; object-fit: cover;">
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">In Stock</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">Wireless Mouse</h5>
                            <span class="badge bg-light text-dark small">Electronics</span>
                        </div>
                        <p class="card-text text-muted small mb-2">Precision wireless mouse with programmable buttons</p>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning me-1">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star"></i>
                            </div>
                            <span class="text-muted small">(4.4)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h5 mb-0 fw-bold">$59.99</span>
                            <button class="btn btn-dark btn-sm">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
