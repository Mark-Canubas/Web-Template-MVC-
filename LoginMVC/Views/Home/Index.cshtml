@{
    ViewBag.Title = "Dashboard";
}

<div class="d-flex flex-column gap-3">
    <!-- Header card -->
    <div class="bg-white border rounded p-4">
        <h1 class="h3 fw-bold mb-2">Dashboard</h1>
        <p class="mb-0 text-muted">Welcome to the dashboard</p>
    </div>
    
    <!-- Stats cards -->
    <div class="row g-3">
        <!-- Users Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="h4 fw-bold mb-1">1,234</div>
                        <div class="fw-semibold">Users</div>
                        <div class="text-muted small">Active users in the last 24 hours</div>
                    </div>
                    <div class="ms-3">
                        <i class="bi bi-people fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sales Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="h4 fw-bold mb-1">$12,345</div>
                        <div class="fw-semibold">Sales</div>
                        <div class="text-muted small">Total sales in the last 24 hours</div>
                    </div>
                    <div class="ms-3">
                        <i class="bi bi-cart fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Visits Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="h4 fw-bold mb-1">23,456</div>
                        <div class="fw-semibold">Visits</div>
                        <div class="text-muted small">Website visits in the last 24 hours</div>
                    </div>
                    <div class="ms-3">
                        <i class="bi bi-graph-up fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="bg-white border rounded p-4 h-100">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="h4 fw-bold mb-1">567</div>
                        <div class="fw-semibold">Orders</div>
                        <div class="text-muted small">New orders in the last 24 hours</div>
                    </div>
                    <div class="ms-3">
                        <i class="bi bi-box fs-1 text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>